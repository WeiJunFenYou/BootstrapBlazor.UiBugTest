@page "/counter"
@attribute [TabItemOption(Text = "Counter")]

<PageTitle>测试异常捕获</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">点击产生异常</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        throw new Exception("测试的异常哦！");
        currentCount++;
    }
}
